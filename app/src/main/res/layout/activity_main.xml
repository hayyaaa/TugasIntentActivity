<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="40sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins"
        android:textAlignment="center"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="40dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_txt_username"
        android:background="@drawable/shape"
        android:hint="Username"
        android:fontFamily="@font/poppins"
        android:textSize="19sp"
        android:paddingHorizontal="25dp"
        android:paddingVertical="10dp"
        android:layout_marginBottom="15dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_txt_email"
        android:background="@drawable/shape"
        android:hint="Email"
        android:fontFamily="@font/poppins"
        android:textSize="19sp"
        android:paddingHorizontal="25dp"
        android:paddingVertical="10dp"
        android:layout_marginBottom="15dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_txt_phone"
        android:background="@drawable/shape"
        android:hint="Phone"
        android:fontFamily="@font/poppins"
        android:textSize="19sp"
        android:paddingHorizontal="25dp"
        android:paddingVertical="10dp"
        android:layout_marginBottom="15dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_txt_password"
        android:background="@drawable/shape"
        android:hint="Password"
        android:fontFamily="@font/poppins"
        android:textSize="19sp"
        android:paddingHorizontal="25dp"
        android:paddingVertical="10dp"
        android:layout_marginBottom="25dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <CheckBox android:id="@+id/checkbox"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="15dp"
            android:onClick="onCheckboxClicked"/>

        <TextView
            android:id="@+id/txt_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By checking the box you agree to our"
            android:textSize="11sp"
            android:fontFamily="@font/poppins"
            android:layout_marginStart="5dp"/>

        <TextView
            android:id="@+id/txt_terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Terms"
            android:fontFamily="@font/poppins"
            android:textSize="11sp"
            android:textColor="@color/blue" />

        <TextView
            android:id="@+id/txt_and"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" and"
            android:textSize="11sp"
            android:fontFamily="@font/poppins" />

        <TextView
            android:id="@+id/txt_conditions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text=" Condition"
            android:textColor="@color/blue"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_register"
        android:text="Register"
        android:fontFamily="@font/poppins"
        android:backgroundTint="@color/blue"
        android:layout_marginTop="75dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/txt_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already Have an Account?"
            android:textSize="12sp"
            android:fontFamily="@font/poppins"
            android:layout_marginStart="5dp"/>

        <TextView
            android:id="@+id/txt_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Log In"
            android:textSize="12sp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/blue" />

    </LinearLayout>



</LinearLayout>